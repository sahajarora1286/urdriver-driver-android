<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation = "vertical"
        tools:context="com.sahajarora.fate.RegisterActivity">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:id="@+id/etName"
                android:maxLines="1"
                android:maxLength="40"
                android:nestedScrollingEnabled="true"
                android:autoText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:id="@+id/etAddress"
                android:maxLines="1"
                android:maxLength="400"
                android:nestedScrollingEnabled="true"
                android:autoText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Postal Code: "
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:id="@+id/etPostalCode"
                android:maxLines="1"
                android:maxLength="300"
                android:nestedScrollingEnabled="true"
                android:autoText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:id="@+id/etPhone"
                android:maxLines="1"
                android:maxLength="12"
                android:inputType="phone"
                android:nestedScrollingEnabled="true"
                android:autoText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Username (email):"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:inputType="textEmailAddress"
                android:id="@+id/etUsername"
                android:maxLines="1"
                android:maxLength="100"
                android:nestedScrollingEnabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="85"
                android:id="@+id/etPassword"
                android:maxLines="1"
                android:maxLength="35"
                android:nestedScrollingEnabled="true"
                android:autoText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textPassword"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Confirm Password:"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:id="@+id/etConfirmPassword"
                android:maxLines="1"
                android:maxLength="35"
                android:nestedScrollingEnabled="true"
                android:autoText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textPassword"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="License Number:"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:id="@+id/etLicenseNumber"
                android:maxLines="1"
                android:maxLength="35"
                android:nestedScrollingEnabled="true"
                android:autoText="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Driving Experience"
                android:textSize = "20sp"
                android:layout_weight="15" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:id="@+id/etDrivingExperience"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="2"
                android:nestedScrollingEnabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:minLines="1"
                android:outlineProvider="bounds"
                android:singleLine="true"
                android:enabled="true" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Terms and Conditions"
            android:textColor="#2963c9"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/tvTandC"
            android:onClick="onTandCClicked"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have read, and I accept the terms and conditions mentioned above"
            android:id="@+id/cbTandC"
            android:layout_marginTop="10dp"/>




        <Button
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"
            android:layout_width="120dp"
            android:layout_height="45sp"
            android:id="@+id/btnRegister"
            android:text="REGISTER"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
</ScrollView>